<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:id="@+id/layout"
>
	<EditText android:id="@+id/text"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text=""
	android:textSize="10pt"/>
	
	<TableLayout android:id="@+id/TitleBar" android:layout_width="fill_parent" android:layout_height="wrap_content">
	<TableRow>
		<Button android:id="@+id/CopyButton" android:layout_width="fill_parent" android:layout_height="wrap_content" android:autoText="false" android:text="複製" android:textSize="10pt" android:layout_marginRight="10px" android:layout_weight="1"></Button>
		<Button android:id="@+id/CESwitchButton" android:layout_width="fill_parent" android:layout_height="wrap_content" android:autoText="false" android:text="中/英" android:textSize="10pt" android:layout_marginRight="10px" android:layout_weight="1"></Button>
	</TableRow>
	</TableLayout>
		
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:id="@+id/vkb_layout"
	android:visibility="gone"
	>
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="horizontal" android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<view android:id="@+id/softkey_bpmf"
				class="idv.Zero.KerKerInput.VirtualKeyboard.KeyButton"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				></view>
			<view android:id="@+id/softkey_dtnl"
				class="idv.Zero.KerKerInput.VirtualKeyboard.KeyButton"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				></view>
			<view android:id="@+id/softkey_gkh"
				class="idv.Zero.KerKerInput.VirtualKeyboard.KeyButton"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				></view>
			<view android:id="@+id/softkey_jqx"
				class="idv.Zero.KerKerInput.VirtualKeyboard.KeyButton"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				></view>
		</LinearLayout>
	
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="horizontal" android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<view android:id="@+id/softkey_zhchshr"
				class="idv.Zero.KerKerInput.VirtualKeyboard.KeyButton"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				></view>
			<view android:id="@+id/softkey_zcs"
				class="idv.Zero.KerKerInput.VirtualKeyboard.KeyButton"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				></view>
			<view android:id="@+id/softkey_iuyu"
				class="idv.Zero.KerKerInput.VirtualKeyboard.KeyButton"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				></view>
			<view android:id="@+id/softkey_aoeee"
				class="idv.Zero.KerKerInput.VirtualKeyboard.KeyButton"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				></view>
		</LinearLayout>
	
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="horizontal" android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<view android:id="@+id/softkey_aieiauou"
				class="idv.Zero.KerKerInput.VirtualKeyboard.KeyButton"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				></view>
			<view android:id="@+id/softkey_anenangenger"
				class="idv.Zero.KerKerInput.VirtualKeyboard.KeyButton"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				></view>
			<view android:id="@+id/softkey_12345"
				class="idv.Zero.KerKerInput.VirtualKeyboard.KeyButton"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				></view>
			<view android:id="@+id/softkey_control"
				class="idv.Zero.KerKerInput.VirtualKeyboard.KeyButton"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				></view>
		</LinearLayout>
		
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/candidate_layout" android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content" android:visibility="visible">
			<Button android:id="@+id/candidate_1" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:textSize="30px"
				android:visibility="gone"></Button>
			<Button android:id="@+id/candidate_2" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:textSize="30px"
				android:visibility="gone"></Button>
			<Button android:id="@+id/candidate_3" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:textSize="30px"
				android:visibility="gone"></Button>
			<Button android:id="@+id/candidate_4" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:textSize="30px"
				android:visibility="gone"></Button>
			<Button android:id="@+id/candidate_5" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:textSize="30px"
				android:visibility="gone"></Button>
			<Button android:id="@+id/candidate_6" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:textSize="30px"
				android:visibility="gone"></Button>
		</LinearLayout>
	</LinearLayout>
	
	<TextView android:id="@+id/buffer"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="@string/bpmf_label" android:textSize="8pt"/>
</LinearLayout>